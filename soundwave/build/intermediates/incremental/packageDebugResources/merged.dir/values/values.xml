<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="colorAccent">#03DAC5</color>
    <color name="colorPrimary">#6200EE</color>
    <color name="colorPrimaryDark">#3700B3</color>
    <string name="app_name">SoundWave</string>
    <string name="default_duration">00:00</string>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <declare-styleable name="PlayerView">
        <attr format="color" name="mainColor"/>
        <attr format="color" name="secondaryColor"/>
        <attr format="string" name="fontName"/>
        <attr format="string" name="title"/>
        <attr format="boolean" name="waveDb"/>
    </declare-styleable>
    <declare-styleable name="SoundWaveView">
        <attr format="color" name="playedColor"/>
        <attr format="color" name="nonPlayedColor"/>
        <attr format="boolean" name="db"/>
    </declare-styleable>
</resources>