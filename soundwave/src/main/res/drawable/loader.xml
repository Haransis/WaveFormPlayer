                    android:propertyName="pathData"
                    android:startOffset="1000"
                    android:duration="400"
                    android:valueFrom="M 20 0 L 22 0 L 22 15 L 20 15 Z"
                    android:valueTo="M 20 0 L 22 0 L 22 0 L 20 0 Z"
                    android:valueType="pathType"
